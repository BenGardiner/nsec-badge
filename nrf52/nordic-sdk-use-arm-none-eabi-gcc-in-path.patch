#!/bin/bash

cd nordicsdk/toolchain/gcc
rm Makefile.posix

GNU_PREFIX=arm-none-eabi
GNU_INSTALL_ROOT=$(dirname $(which $GNU_PREFIX-gcc))
GNU_VERSION=$($GNU_INSTALL_ROOT/bin/$GNU_PREFIX-gcc -dumpversion)

echo -e "GNU_PREFIX ?= $GNU_PREFIX\nGNU_INSTALL_ROOT ?= $GNU_INSTALL_ROOT/\nGNU_VERSION ?= $GNU_VERSION" > Makefile.posix
